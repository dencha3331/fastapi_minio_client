FROM python:3.10# Установка зависимостейCOPY ./requirements.txt /app/requirements.txtRUN pip install --no-cache-dir --upgrade -r /app/requirements.txt# Копирование приложенияCOPY ./app /app/app# Установка рабочей директорииWORKDIR /app# Команда для запуска приложенияCMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "80"]FROM python:3.10# Установка зависимостейCOPY ./requirements.txt /app/requirements.txtRUN pip install --no-cache-dir --upgrade -r /app/requirements.txt# Копирование приложенияCOPY ./app /app/appCOPY ./media_service /app/media_service# Установка рабочей директорииWORKDIR /app# Переменная окружения для выбора сервисаARG SERVICE# Команда для запуска нужного сервисаCMD if [ "$SERVICE" = "media" ]; then uvicorn media_service.main:app --host 0.0.0.0 --port 8000; else uvicorn app.main:app --host 0.0.0.0 --port 80; fi